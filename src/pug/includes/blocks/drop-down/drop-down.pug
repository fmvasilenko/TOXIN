include drop-down__option.pug

mixin drop-down($options, $title, $value)
  .drop-down.drop-down_size_s
    h3=$title
    .drop-down__field
      input.drop-down__field-input(value=$value disabled)
      i.material-icons.drop-down__expand-more expand_more
    .drop-down__list
      each $option in $options
        +drop-down__option($option.name, $option.id, $option.number)