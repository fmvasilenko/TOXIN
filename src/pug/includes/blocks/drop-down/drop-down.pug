include drop-down__option.pug
include ../button.pug

mixin drop-down($options, $title, $value)
  //   Example of usage
  //  - 
      var drop_down_values = [
                          {name: 'Спальни', id: 'bedrooms', number: 0}, 
                          {name: 'Кровати', id: 'beds', number: 0}, 
                          {name: 'Ванные комнаты', id: 'bathrooms', number: 0}
      ]

  //+drop-down(drop_down_values, 'Заголовок', 'Сколько гостей')

  .drop-down
    h3.drop-down__title=$title
    .drop-down__field
      input.drop-down__field-input(value=$value disabled)
      i.material-icons.drop-down__expand-more expand_more
    .drop-down__list
      each $option in $options
        +drop-down__option($option.name, $option.id, $option.number)
      .drop-down__submit-area
        button.button.button_no-background.button_color_grey Очистить
        button.button.button_no-background Применить