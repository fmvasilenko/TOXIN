mixin date-dropdown(name_1, title_1, name_2, title_2)
  .date-dropdown
    .date-dropdown__wrapper
      h3.date-dropdown__title= title_1
      input.date-dropdown__input(type="date" name=name_1)
      i.material-icons.date-dropdown__expand-more expand_more
    .date-dropdown__wrapper
      h3.date-dropdown__title= title_2
      input.date-dropdown__input(type="date" name=name_2)
      i.material-icons.date-dropdown__expand-more expand_more
    