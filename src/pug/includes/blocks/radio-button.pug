mixin radio-button($name, $id, $text, $checked)
  if $checked=='checked'
    .radio-button
      input.radio-button__input(id=$id type='radio' name=$name checked)
      label.radio-button__label(for=$id)=$text
  else
    .radio-button
      input.radio-button__input(id=$id type='radio' name=$name)
      label.radio-button__label(for=$id)=$text