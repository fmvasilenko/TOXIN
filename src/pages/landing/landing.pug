extends ../../layout/landing 

block styles
  link(rel="stylesheet" href="assets/css/app.css")

block scripts
  script(type="text/javascript" src="assets/js/landing.js")

include ../../common.blocks/header/header.pug
include ../../common.blocks/footer/footer.pug 
include ../../common.blocks/search-form/search-form.pug

block variables
  - const data = require('./landing.data.json');
  - const classes = require('./landing.classes.json');
  - const pageTitle = 'Landing';
  - const pageDescription = 'Search page for TOXIN';
  - const pageClasses = `${classes.landing} js-${classes.landing}`;
  - const { description, searchForm } = data;

block header
  +header()

block footer
  +footer()

block content
  .landing__background
    .landing__content
      div(class = `${classes.searchForm} js-${classes.searchForm}`)
        +search-form(searchForm)
      
      p.landing__description #{description}
