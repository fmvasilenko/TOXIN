extends ../../layout/landing

include ../../common.blocks/header/header.pug
include ../../common.blocks/footer/footer.pug 

block variables
  - const pageTitle = 'Headers & Footers';
  - const pageDescription = 'Headers';

block styles
  link(rel="stylesheet" href="assets/css/app.css")

block header
  - const data = require('./headers.data.json');
  - const { headers, footers } = data;
  
  .headers

    .headers__header1
      +header(headers[0])

    .headers__header2
      +header(headers[1])

    .headers__footer1
      +footer(footers[0])

    .headers__footer2
      +footer(footers[1])
