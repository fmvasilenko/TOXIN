mixin button(customConfig = {})
  - const blocks = require('@backend/Blocks.js');
  - const defaultConfig = require('@blocks/button/button.config.json');

  - const config = blocks.createConfig(defaultConfig, customConfig);
  - const { value, type: buttonType, style, href, disabled, icon, classes } = config;

  - const buttonClasses = `button ${classes[style]}`;

  if buttonType === "link"
    a(class=buttonClasses href=href) #{value}
      if style === "sizeL"
        i.material-icons.button__arrow #{icon}
  else
    button(class=buttonClasses type=buttonType disabled=disabled) #{value}
      if style === "sizeL"
        i.material-icons.button__arrow #{icon}
