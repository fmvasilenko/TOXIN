include ../date-dropdown/date-dropdown.pug 
include ../dropdown/dropdown.pug 
include ../button/button.pug 

mixin search-form(customConfig = {})
  - const blocks = require('@backend/Blocks.js');
  - const defaultConfig = require('@blocks/search-form/search-form.config.json');

  - const config = blocks.createConfig(defaultConfig, customConfig);
  - const { title, method, action, datesParameters, guestsParameters, button } = config;

  form.search-form.js-search-form(method=method action=action)
    h1.search-form__title #{title}
    .search-form__dates
      +date-dropdown(datesParameters)
    .search-form__guests
      +dropdown(guestsParameters)
    .search-form__submit
      +button(button)
