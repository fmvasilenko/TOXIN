include ../date-dropdown/date-dropdown.pug 
include ../drop-down/drop-down.pug 
include ../button/button.pug 

mixin search-form()
  block parameters
    - 
      var dates_parameters = {
        title_1: 'Прибытие',
        name_1: 'arrival',
        title_2: 'Выезд',
        name_2: 'leaving'
      }

    - 
      var guests_types = [
        {label: 'Взрослые', name: 'adults', value: 0}, 
        {label: 'Дети', name: 'kids', value: 0}, 
        {label: 'Младенцы', name: 'babies', value: 0}
      ]

    -
      var guests_parameters = {
        title: 'Гости',
        default_value: 'Сколько гостей',
        value_forms: 'гость,гостя,гостей',
        display_type: 'total',
        display_submit_button: true,
        display_clear_button: true,
        options: guests_types
      }

  .search-form
    h1.search-form__title Найдем номера под <br>ваши пожелания
    .search-form__dates
      +date-dropdown(dates_parameters)
    .search-form__guests
      +drop-down(guests_parameters)
    .search-form__submit
      +button('Подобрать номер', 'size_l')
      