mixin drop-down__option(parameters = {name: '', label: '', value: ''})
  .drop-down__option
    label.drop-down__option-title= parameters.label
    .drop-down__number
      if parameters.value==0
        button.drop-down__button.js-drop-down__button_decrease(type="button" disabled) -
      else
        button.drop-down__button.js-drop-down__button_decrease(type="button") -
      input.drop-down__input(type="number" name=parameters.name value=parameters.value forms=parameters.forms readonly)
      button.drop-down__button.js-drop-down__button_increase(type="button") +