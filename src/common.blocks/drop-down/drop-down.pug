include __option/drop-down__option.pug

mixin drop-down(parameters = {options: [], title: 'Dropdown', value: ''})
  //   Example of usage
  //  - 
      var drop_down_values = [
                          {name: 'Спальни', id: 'bedrooms', number: 0}, 
                          {name: 'Кровати', id: 'beds', number: 0}, 
                          {name: 'Ванные комнаты', id: 'bathrooms', number: 0}
      ]

  //+drop-down(drop_down_values, 'Заголовок', 'Сколько гостей')

  .drop-down

    h3.drop-down__title= parameters.title
    
    .drop-down__field
      input.drop-down__field-input(value=parameters.default_value forms=parameters.value_forms disabled)
      i.material-icons.drop-down__expand-more expand_more

    .drop-down__list
      if parameters.options
        each option in parameters.options
          +drop-down__option(option)
        .drop-down__submit-area
          button.button.button_no-background.button_color_grey.js-drop-down__clear-button Очистить
          button.button.button_no-background Применить