mixin rate-button(customConfig = {})
  - let blocks = require('@plugins/blocks.js');
  - let defaultConfig = require('@blocks/rate-button/rate-button.config.json');
  - let config = blocks.createConfig(defaultConfig, customConfig);
  
  form.rate-button
    label
      input.rate-button__input(type="radio" name="rating" value="1")
      i.material-icons.rate-button__label star_border
    label
      input.rate-button__input(type="radio" name="rating" value="2")
      i.material-icons.rate-button__label star_border
    label
      input.rate-button__input(type="radio" name="rating" value="3")
      i.material-icons.rate-button__label star_border
    label
      input.rate-button__input(type="radio" name="rating" value="4")
      i.material-icons.rate-button__label star_border
    label
      input.rate-button__input(type="radio" name="rating" value="5")
      i.material-icons.rate-button__label star_border