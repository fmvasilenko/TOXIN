mixin text-field(customConfig = {})
  - const blocks = require('@backend/Blocks.js');
  - const defaultConfig = require('@blocks/text-field/text-field.config.json');

  - const config = blocks.createConfig(defaultConfig, customConfig);
  - const { title, name, placeholder, type: fieldType, value, required } = config;

  .text-field
    if title
      h3.text-field__title #{title}
    input.text-field__input(type=fieldType name=name placeholder=placeholder value=value required=required)
