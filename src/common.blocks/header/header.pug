include ../logo/logo 
include ../menu-icon/menu-icon 
include ../button/button 

mixin header(customConfig = {})
  - let blocks = require('@backend/Blocks.js');
  - let defaultConfig = require('@blocks/header/header.config.json');
  - let config = blocks.createConfig(defaultConfig, customConfig);

  header.header
    .header__inner-wrapper

      a.header__logo(href=config.logoHref)
        +logo()

      label.header__sandwich-icon(for="header-menu-toggle")
        +menu-icon()

      input.header__sandwich-input(id="header-menu-toggle" type="checkbox")

      nav.header__menu
        each item in config.menu
          a.header__link(href=item.link) #{item.title}
            if item.submenu
              i.material-icons.header__menu-icon #{config.vocabulary.expandMoreIcon}
      
      if config.type == "buttons"
        .header__button
          +button(config.buttons[0])
        .header__button
          +button(config.buttons[1])
          
      else if config.type == "text"
        p.header__text #{config.rightText}