include ../calendar/calendar 

mixin date-dropdown(customConfig = {})
  - let blocks = require('@backend/Blocks.js');
  - let defaultConfig = require('@blocks/date-dropdown/date-dropdown.config.json');
  - let config = blocks.createConfig(defaultConfig, customConfig);

  .date-dropdown.js-date-dropdown

    .date-dropdown__wrapper
      h3.date-dropdown__title #{config.dropdown1.title}
      i.material-icons.date-dropdown__expand-more.js-date-dropdown__expand-more #{config.dropdown1.icon}
      input.date-dropdown__input.js-date-dropdown__input(type="date" name="arrivalDate" value=config.dropdown1.value readonly)
    
    .date-dropdown__wrapper
      h3.date-dropdown__title #{config.dropdown2.title}
      i.material-icons.date-dropdown__expand-more.js-date-dropdown__expand-more #{config.dropdown1.icon}
      input.date-dropdown__input.js-date-dropdown__input(type="date" name="leavingDate" value=config.dropdown2.value readonly)

    .date-dropdown__calendar.js-date-dropdown__calendar
      +calendar()
