mixin dropdown-option(parameters = {name: '', label: '', value: 0})
  - let decreaseButtonDisabled = parameters.value ? false : true;

  li.dropdown-option.js-dropdown-option
    h3 #{parameters.label}
    .dropdown-option__number
      button.dropdown-option__button.js-dropdown-option__button(type="button" disabled=decreaseButtonDisabled name="decreaseButton") -
      input.dropdown-option__input.js-dropdown-option__input(type="number" name=parameters.name value=parameters.value forms=parameters.forms readonly)
      button.dropdown-option__button.js-dropdown-option__button(type="button" name="increaseButton") +